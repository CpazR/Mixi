<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:midi="clr-namespace:Commons.Music.Midi;assembly=Commons.Music.Midi"
        x:Class="Mixi.UI.MidiManager.MidiManagerWindow"
        Title="Mixi"
        Width="1280" Height="720" WindowState="Normal" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <WrapPanel Margin="10">
            <Label FontSize="20">
                Available Devices:
            </Label>
            <ComboBox Name="MidiDevices" FontSize="17" MinWidth="600" MaxDropDownHeight="200"
                      VerticalAlignment="Bottom">
                <ComboBox.ItemTemplate>
                    <DataTemplate DataType="midi:IMidiPortDetails">
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </WrapPanel>
        <Separator />
        <Panel Name="MidiControlPanelContainer"
               MinWidth="1280"
               MinHeight="650">
        </Panel>
    </StackPanel>
</Window>