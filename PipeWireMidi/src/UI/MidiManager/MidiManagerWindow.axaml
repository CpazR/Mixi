<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PipeWireMidi.UI.MidiManager.MidiManagerWindow"
        Title="Avalonia Tray Icon Sample"
        Width="1280" Height="720" WindowState="Normal" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <ComboBox Name="MidiDevices" Grid.Row="0" Margin="20">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"></TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Label FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            Avalonia Tray Icon Sample
        </Label>
    </Grid>
</Window>